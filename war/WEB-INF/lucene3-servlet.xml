<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping" />

	<bean id="serviceController" class="net.lucenews3.lucene.ServiceController">
	</bean>

	<bean id="indexController" class="net.lucenews3.lucene.IndexController">
	</bean>
	
	<bean id="documentController" class="net.lucenews3.lucene.DocumentController">
	</bean>

	<bean class="carbonfive.spring.web.pathparameter.ParameterizedUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/">serviceController</prop>
				<prop key="/(*:index)/">indexController</prop>
				<prop key="/(*:index)/(*:document)/">documentController</prop>
			</props>
		</property>
	</bean>

</beans>
